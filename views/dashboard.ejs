<h1>Dashboard</h1>
<h3>Welcome <%= user.firstName %></h3>
<h4>Featured Photo</h4>
<img src="<%= user.profile_image %>" style="width: 100px; height: 100px" />
<h4>Featured Music</h4>
<audio controls>
  <source src="<%= user.audio %>" type="audio/mp3" />
</audio>
<p>Here are your diaries</p>

<% if (diaries.length > 0) { %>
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% diaries.forEach(story => { %>
    <tr>
      <td><a href="/diaries/<%= story._id %>"><%= story.title %></a></td>
      <td><span><%= story.createdAt %></span></td>
      <td><span><%= story.status %></span></td>
      <td>
        <a href="/diaries/edit/<%= story._id %>">edit</a>

        <form
          action="/diaries/<%= story._id %>"
          method="POST"
          class="delete-form"
        >
          <input type="hidden" name="_method" value="DELETE" />
          <input type="submit" value="delete" class="btn" />
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<% } else { %>
<p>You have not created any diaries</p>
<% } %>

<h4><a href="/diaries/add">Add Entry</a></h4>
<footer>
  <h3><a href="/auth/logout">Logout</a></h3>
</footer>

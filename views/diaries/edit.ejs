<h3>Edit Diary</h3>
<div>
  <form action="/diaries/edit/<%= diary._id %>" method="POST">
    <div>
      <div class="input-field">
        <input type="text" id="title" name="title" value="<%= diary.title %>" />
        <label for="title">Title</label>
      </div>
    </div>

    <div>
      <div>
        <select id="status" name="status">
          <% if (diary.status === 'public') { %>
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <% } else { %>
          <option value="public">Public</option>
          <option value="private" selected>Private</option>
          <% } %>
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div>
      <div>
        <h5>Tell Us Your Story:</h5>
        <textarea id="body" name="body"><%= diary.body %></textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>
